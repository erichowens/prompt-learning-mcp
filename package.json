{
  "name": "@anthropic-skills/prompt-learning-mcp",
  "version": "1.0.0",
  "description": "MCP server for stateful prompt optimization with embedding-based learning",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prompt-learning-mcp": "./dist/index.js",
    "prompt-learn": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "setup": "tsx src/setup.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "prompt-engineering",
    "llm",
    "optimization",
    "embeddings",
    "claude"
  ],
  "author": "Some Claude Skills",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/someclaudeskills/prompt-learning-mcp"
  },
  "homepage": "https://www.someclaudeskills.com/skills/automatic-stateful-prompt-improver",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.3.2",
    "openai": "^4.20.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
